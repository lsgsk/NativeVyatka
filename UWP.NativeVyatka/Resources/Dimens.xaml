<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NativeVyatka.UWP.Resources">
    
    <Thickness x:Key="base_margin">10,10,10,10</Thickness>
    <Thickness x:Key="base_margin_vertical">0,10,0,10</Thickness>
    <Thickness x:Key="base_margin_horizontal">10,0,10,0</Thickness>
    <Color x:Key="ColorPrimary">#2196F3</Color>
    <Color x:Key="ColorPrimaryDark">#1a78c2</Color>
    <Color x:Key="ColorAccent">#1a78c2</Color>

    <Style x:Key="EllipsisButton" TargetType="Button">
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

</ResourceDictionary>
